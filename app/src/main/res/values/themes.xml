<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Repoihm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Repoihm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Repoihm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Repoihm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Repoihm.TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:layout_marginBottom">16sp</item>
    </style>

    <style name="Theme.Repoihm.DefaultPadding">
        <item name="android:padding">16sp</item>
    </style>

    <style name="Theme.Repoihm.BackButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawableLeft">@drawable/vector_arrow_back</item>
        <item name="background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">0sp</item>
        <item name="android:layout_margin">0sp</item>
        <item name="android:onClick">returnHomePage</item>
        <item name="android:text">@string/back</item>
        <item name="android:shadowRadius">@null</item>
        <item name="android:drawableBottom">@null</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
</resources>